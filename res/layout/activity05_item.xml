<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:orientation="horizontal" 
    android:background="@drawable/a5item">

    <ImageView
        android:id="@+id/a5_headimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/male_small"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="10sp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/a5_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="#2c2c2c"
                android:gravity="left"
                android:textSize="15sp" 
                android:typeface="monospace"/>

            <TextView
                android:id="@+id/a5_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#a8a8a8"
                android:layout_marginRight="5sp"
                android:textSize="12sp" 
                android:typeface="monospace"/>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/a5_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#4b4b4b"
                android:gravity="left" 
                android:textSize="15sp" 
                android:typeface="monospace"/>

            <LinearLayout
                android:id="@+id/a5_voice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:visibility="invisible">

                <TextView
                    android:id="@+id/a5_voice_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/babble"
                    android:gravity="center"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>